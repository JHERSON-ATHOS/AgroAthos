<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp"
        app:cardBackgroundColor="@color/crema"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIdGrupoCONTENT_RRHH_TAREO_ARANDANO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvIdCONTENT_RRHH_TAREO_ARANDANO"
                android:layout_width="match_parent"
                android:textStyle="bold|italic"
                android:text="GRUPO 1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDniCONTENT_RRHH_TAREO_ARANDANO"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="SUPERVISOR: 24152365" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnEditarGrupoCONTENT_RRHH_TAREO_ARANDANO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar" />

                <Button
                    android:id="@+id/btnDuplicarGrupoCONTENT_RRHH_TAREO_ARANDANO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duplicar" />

                <Button
                    android:id="@+id/btnConfigurarGrupoCONTENT_RRHH_TAREO_ARANDANO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONFIGURAR" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>