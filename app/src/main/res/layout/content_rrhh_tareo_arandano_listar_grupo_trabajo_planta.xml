<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContentTareoPlanta"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/crema"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIdGrupoCONTENT_RRHH_TAREO_ARANDANO_PLANTA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvIdCONTENT_RRHH_TAREO_ARANDANO_PLANTA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROCESO 1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="PROCESO:"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvProcesoCONTENT_RRHH_TAREO_ARANDANO_PLANTA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dato"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="ACTIVIDAD:"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvActividadCONTENT_RRHH_TAREO_ARANDANO_PLANTA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dato"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="LABOR:"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvLaborCONTENT_RRHH_TAREO_ARANDANO_PLANTA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dato"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="MESA:"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvMesaCONTENT_RRHH_TAREO_ARANDANO_PLANTA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dato"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnEditarGrupoCONTENT_RRHH_TAREO_ARANDANO_PLANTA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>